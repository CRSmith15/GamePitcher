<!DOCTYPE html>
<html>
  <head>
    <title>GamePitcher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  <div>
    <% if logged_in? %>
      <%= link_to "New Game Pitch", new_game_path %> |
      <%= link_to "All Game Pitches", games_path %> |
      <%= link_to "My Game Pitches", user_games_path(current_user) %> |
      <%= link_to "Comment on a Game", new_comment_path %> |
      <%= link_to "All Genres", genres_path %> |
      <%= link_to "My Account", user_path(current_user) %>
    <% else %>
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "Log In", login_path %>
    <% end %>
  </div>

  <div>
    <%= @error %>
  </div>
    <%= yield %>
  </body>
</html>
