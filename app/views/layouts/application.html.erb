<!DOCTYPE html>
<html>
  <head>
    <title>GamePitcher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  <div class="nav">
  <ul>
    <% if logged_in? %>  
      <li><%= link_to "New Game Pitch", new_game_path %></li> 
      <li><%= link_to "All Game Pitches", games_path %></li> 
      <li><%= link_to "My Game Pitches", user_games_path(current_user) %></li> 
      <li><%= link_to "Comment on a Game", new_comment_path %></li> 
      <li><%= link_to "All Genres", genres_path %></li> 
      <li style="float:right"><%= link_to "My Account", user_path(current_user) %></li>
    <% else %>
      <li><%= link_to "Sign Up", signup_path %></li> 
      <li><%= link_to "Log In", login_path %></li>
    <% end %>
    </ul> 
  </div>

  <div class="errors">
    <%= @error %>
  </div>
    <%= yield %>
  </body>
</html>
