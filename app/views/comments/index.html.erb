<% if @game %>
  <h1>Comments for <%= @game.title%></h1>
<% else %>
  <h1>All Comments</h1>
<% end %>

<ul>
<% @comments.each do |c|%>
  <li><%= link_to c.user.username, user_path(c.user)%> says "<%= c.text%>" about this game: <strong><%= link_to c.game.title, game_path(c.game_id) %></strong> - <%= link_to "See the comment", comment_path(c)%></li>
<% end %>
</ul>